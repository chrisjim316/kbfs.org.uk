header.header.header-transparent
    .container-fluid
        // Brand
        .inner-header
            a.inner-brand(href='index.html')
                img(src='assets/kbfs/images/kbfs_logo.svg', width='200', height='200')
        // Navigation
        .inner-navigation.collapse
            .inner-nav
                ul
                    li.menu-item-has-children.menu-item-has-mega-menu
                        a(href='#')
                            span.menu-item-span Home
                    li.menu-item-has-children.menu-item-has-mega-menu
                        a(href='#about-us')
                            span.menu-item-span About Us
                    li.menu-item-has-children.menu-item-has-mega-menu
                        a(href='#team')
                            span.menu-item-span Our Team
                    li.menu-item-has-children
                        a(href='#whatwedo')
                            span.menu-item-span What we do
                    li.menu-item-has-children
                        a(href='#events')
                            span.menu-item-span Events
                    li.menu-item-has-children
                        a(href='#contact')
                            span.menu-item-span Contact
        .extra-nav
            ul
                li.nav-toggle
                    a(href='#', data-toggle='collapse', data-target='.inner-navigation')
                        span.menu-item-span
                            i.ti-menu
// Header end