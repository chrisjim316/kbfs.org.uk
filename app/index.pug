append content

  // Hero
  section.module-cover.parallax.text-center.fullscreen(data-background="/assets/images/kbfs_banner.jpg" data-overlay="0.65")
    .container

      .row
        .col-md-12
          h1.m-b-10: strong We help you navigate the world of banking &amp; finance
          .col-md-8.m-auto.text-center
            p.m-b-30 King’s Banking &amp; Finance Society is the largest finance and banking society in King’s College London. We connect top talent like yourself to top firms and support you every step of the way in your application journey and beyond.
          p.lead
            a(href="https://www.kclsu.org/organisation/kbfs/" class="btn btn-lg btn-brand") Become a member
          ul.social-icons
            li
              a(href='https://twitter.com/KingsBFS')
                i.fab.fa-twitter
            li
              a(href='https://www.instagram.com/Kings.BFS')
                i.fab.fa-instagram
            li
              a(href='https://www.facebook.com/KingsBFS/')
                i.fab.fa-facebook-f
            li
              a(href='https://www.linkedin.com/company/KBFS')
                i.fab.fa-linkedin
  // Hero end

  = "\n"

  //Sponsors
  section#sponsors.module.bg-gray.p-b-30.p-t-30
    .container
      .row
        .col-md-8.m-auto.text-center
          h6.lead.serif Proudly sponsored by
      .row
        .col-md-10.m-auto
          //- .owl-carousel.clients-carousel
          .client.mx-auto
